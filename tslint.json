{
  "extends": [
    "tslint:recommended",
    "tslint-react"
  ],
  "rules": {
    "indent": [
      true,
      "spaces",
      2
    ],
    "interface-name": [
      true,
      "never-prefix"
    ],
    "interface-over-type-literal": false,
    "jsx-no-multiline-js": false,
    "linebreak-style": [
      true,
      "LF"
    ],
    "no-any": true,
    "object-literal-shorthand": [
      true,
      "never"
    ],
    "object-literal-sort-keys": false,
    "quotemark": [
      true,
      "single",
      "jsx-double"
    ],
    "trailing-comma": [
      true,
      {
        "multiline": "never",
        "singleline": "never"
      }
    ]
  },
  "linterOptions": {
    "exclude": [
      "**/*.json"
    ]
  }
}
